extends includes/layouts/Guest.pug

block header
  - const pageTitle = 'Bảng điều khiển'

block pages
  .DashboardPage 
    .content.container-fluid
      .row
        .col-lg-9.pr-lg-2
          +Card({ className: 'mb-3', title: 'Xuất bản phẩm theo công đoạn' })
            .DashboardPage-total-cards.d-flex.flex-wrap
              each item in dataDashboardTotalCard
                +DashboardTotalCard(item)

          .row.mb-3
            .col-lg-6.pr-lg-2
              +Card({ className: 'mb-3', title: 'Việc sắp đến hạn', fullHeight: true, noPadding: true })
                .overflow-y-auto(style="max-height: 875px;")
                  .DashboardPage-job
                    each item in dataJobCards
                      +JobCard(item)

            .col-lg-6.pl-lg-2
              +Card({ className: 'mb-3', title: 'Việc quá hạn', fullHeight: true, noPadding: true })
                .overflow-y-auto(style="max-height: 875px;")
                  .DashboardPage-job
                    each item in dataJobCards
                      +JobCard(item)

          .row 
            .col-lg-6.pr-lg-2
              +Card({ className: 'mb-3', title: 'Sách mới đăng ký', fullHeight: true, noPadding: true })
                .overflow-y-auto(style="max-height: 875px;")
                  .DashboardPage-job
                    each item in dataBooksCards
                      +JobCard(item)

            .col-lg-6.pl-lg-2
              +Card({ className: 'mb-3', title: 'Việc của bạn', fullHeight: true, noPadding: true })
                .overflow-y-auto(style="max-height: 875px;")
                  .DashboardPage-job
                    each item in dataJobCards
                      +JobCard(item)


        .col-lg-3.pl-lg-2
          +Card({ className: 'mb-3', title: 'Nhân viên online gần đây', size: 'small', dark: true, noPadding: true })
            .DashboardPage-users 
              each item in [1,2,3,4,5]
                .DashboardPage-users-item.d-flex.align-items-center.justify-content-between
                  +Avatar({ image: './assets/images/image-avatar.jpeg', online: true, size: 'avatar-xs' })
                  .DashboardPage-users-item-title Nguyễn Thu Hoài

          +Card({ className: 'mb-3', title: 'Sinh nhật', size: 'small', dark: true, noPadding: true })
            .DashboardPage-users 
              each item in [1,2,3,4,5]
                .DashboardPage-users-item.d-flex.align-items-center.justify-content-between
                  +Avatar({ text: 'H', size: 'avatar-xs', background: item % 2 === 0 ? '#377DFF' : '#FD7E14' })
                  .DashboardPage-users-item-title Nguyễn Thu Hoài
                  .DashboardPage-users-item-suffix 29/09

          +Card({ className: 'mb-3', title: 'Top quá hạn', size: 'small', dark: true, noPadding: true })
            .DashboardPage-users 
              each item in [1,2,3,4,5]
                .DashboardPage-users-item.d-flex.align-items-center.justify-content-between
                  +Avatar({ image: './assets/images/image-avatar.jpeg', online: item % 2 === 0, size: 'avatar-xs' })
                  .DashboardPage-users-item-title Nguyễn Thu Hoài